@model Domain.Entities.t_siz_parameters

<div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.id)
        <div>
            @Html.LabelFor(model => model.year)
            <p>@Html.TextBoxFor(model => model.year, new { @class = "form-control" })</p>
        </div>
        <div>
            @Html.LabelFor(model => model.quarter):
            @*%<p>@Html.DropDownListFor(model => model.quarter, ViewBag.Quart as SelectList, new { @class = "form-control" })</p>--%*@
        </div>
        <div>
            <label>
                <input type="checkbox" name="selectedQ" value="1"
                       @(ViewBag.Quarters[0] == 1 ? "checked=\"checked\"" : "") />  1-й квартал
            </label>
        </div>
    <div>
        <label>
            <input type="checkbox" name="selectedQ" value="2"
                   @(ViewBag.Quarters[1] == 1 ? "checked=\"checked\"" : "") />  2-й квартал
        </label>
    </div>
    <div>
        <label>
            <input type="checkbox" name="selectedQ" value="3"
                   @(ViewBag.Quarters[2] == 1 ? "checked=\"checked\"" : "") />  3-й квартал
        </label>
    </div>
    <div>
        <label>
            <input type="checkbox" name="selectedQ" value="4"
                   @(ViewBag.Quarters[3] == 1 ? "checked=\"checked\"" : "") />  4-й квартал
        </label>
    </div>
        <p><input class="btn btn-success" type="submit" value="Сохранить" /></p>
    }
</div>
