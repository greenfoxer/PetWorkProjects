@model IEnumerable<Domain.Entities.t_siz_goods_size>

@{
    ViewBag.Title = "Перечень размеров";
    Layout = "~/Views/SIZ/_SIZ.cshtml";
}
<nav id="btns" style="border-bottom:groove;  z-index:2">
    <ul>
        <li>
            @Html.ActionLink("Добавить размер", "NewSize", "SIZ", new { },
                     new { @class = "viewDialog", data_dialog_title = "Новый размер" })
        </li>
        <li>
            @Html.ActionLink("К заявкам", "Orders", "SIZ", new { },
                     new {})
        </li>
    </ul>
</nav>
<table id="tb" class="table table-striped table-condensed table-bordered">
    <thead>
        <tr>
            <th class="text-left">Размер</th>
            <th class="text-center">Действия</th>
        </tr>
    </thead>
    @foreach (var p in @Model)
    {
        <tr>
            <td>
                @Html.ActionLink(@p.size, "EditSize", "SIZ", new { id = p.id },
                    new { @class = "viewDialog", data_dialog_title = "Редактирование размера" })
            </td>
            <td>
                <a href="@Url.Action("EditSize", "SIZ", new { id = p.id })" class="viewDialog" data-dialog-title="Редактирование размера"><span class="glyphicon glyphicon-pencil"></span></a>
                <a href="@Url.Action("DeleteSize", "SIZ", new { id = p.id })" class="viewDialog" data-dialog-title="Удаление размера"><span class=" glyphicon glyphicon-remove" style="color:red"></span></a>
            </td>
        </tr>
    }
</table>
